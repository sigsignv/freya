root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[devcontainer.json]
indent_style = tab
tab_width = 4

[phpstan.neon{,.dist}]
indent_style = tab
tab_width = 4

[phpunit.xml{,.dist}]
indent_style = space
indent_size = 4
